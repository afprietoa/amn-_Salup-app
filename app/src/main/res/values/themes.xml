<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.4BB4G1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/primaryText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/secondaryText</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Mintic.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Mintic.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Mintic.Large</item>
        <item name="textAppearanceButton">@style/Theme.4BB4G1.TextAppearenceButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.4BB4G1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.4BB4G1.TextAppearenceButton" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.4BB4G1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.4BB4G1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearance.Mintic.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Mintic.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Mintic.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.4BB4G1.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="Theme.4BB4G1.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="cutImage" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <style name="Theme.4BG1.Headline5" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

</resources>